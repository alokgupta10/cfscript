# Step 1: Download the missing GPG key
curl -fsSL https://archive.kali.org/archive-key.asc -o /usr/share/keyrings/kali-archive-keyring.gpg

# Step 2: Add the key to apt
gpg --no-default-keyring --keyring /usr/share/keyrings/kali-archive-keyring.gpg --import /usr/share/keyrings/kali-archive-keyring.gpg

# Step 3: Update apt sources using the keyring
echo "deb [signed-by=/usr/share/keyrings/kali-archive-keyring.gpg] http://http.kali.org/kali kali-rolling main contrib non-free non-free-firmware" | sudo tee /etc/apt/sources.list

# Step 4: Clean and update
sudo apt clean
sudo apt update
